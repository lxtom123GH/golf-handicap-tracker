rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // =========================================================================
    // üîí HELPER FUNCTIONS
    // =========================================================================
    
    // Checks if the user is logged in
    function isAuthenticated() {
      return request.auth != null;
    }

    // Checks the 'users' collection to see if the user has the isAdmin flag
    function isAdmin() {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Checks if the logged-in user's UID is in the target student's 'coaches' array
    function isCoachOf(studentUid) {
      return isAuthenticated() && 
        request.auth.uid in get(/databases/$(database)/documents/users/$(studentUid)).data.coaches;
    }

    // =========================================================================
    // üë§ USERS & PROFILES
    // =========================================================================
    
    match /users/{userId} {
      // Anyone logged in can read basic profiles (needed for leaderboards/feed)
      allow read: if isAuthenticated();
      // Users can only update their own profile, Admins can update anyone
      allow write: if isAuthenticated() && (request.auth.uid == userId || isAdmin());

      // üìù Nested Coach Notes
      match /coachNotes/{noteId} {
        // Only the student, their assigned coach, or an admin can read notes
        allow read: if isAuthenticated() && (request.auth.uid == userId || isCoachOf(userId) || isAdmin());
        // Only the coach or an admin can write notes
        allow write: if isAuthenticated() && (isCoachOf(userId) || isAdmin());
      }

      // ‚öôÔ∏è Nested User Preferences
      match /prefs/{prefId} {
        allow read, write: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
      }
    }

    // Profile aliases (legacy mapping catch)
    match /profiles/{userId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
    }

    // =========================================================================
    // ‚õ≥ ROUNDS, SHOTS & PRACTICE
    // =========================================================================
    
    match /whs_rounds/{roundId} {
      // Read: Open to auth'd users for the social feed and leaderboards
      allow read: if isAuthenticated();
      // Create: Must be setting their own UID
      allow create: if isAuthenticated() && request.resource.data.uid == request.auth.uid;
      // Update/Delete: Only the owner or an Admin
      allow update, delete: if isAuthenticated() && (resource.data.uid == request.auth.uid || isAdmin());
    }

    match /shots/{shotId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.uid == request.auth.uid;
      allow update, delete: if isAuthenticated() && (resource.data.uid == request.auth.uid || isAdmin());
    }

    match /practice_rounds/{roundId} {
      // Practice rounds are private! Only the user, their coach, or an Admin can see them.
      allow read: if isAuthenticated() && (resource.data.uid == request.auth.uid || isCoachOf(resource.data.uid) || isAdmin());
      allow create: if isAuthenticated() && request.resource.data.uid == request.auth.uid;
      allow update, delete: if isAuthenticated() && (resource.data.uid == request.auth.uid || isAdmin());
    }

    // =========================================================================
    // üèÜ COMPETITIONS
    // =========================================================================
    
    match /competitions/{compId} {
      // Users can read if it's public, if they own it, if they are invited, or if admin
      allow read: if isAuthenticated() && (
        resource.data.visibility == "public" || 
        resource.data.ownerId == request.auth.uid || 
        request.auth.uid in resource.data.invitedUIDs || 
        isAdmin()
      );
      // Only the owner can create/edit/delete
      allow create: if isAuthenticated() && request.resource.data.ownerId == request.auth.uid;
      allow update, delete: if isAuthenticated() && (resource.data.ownerId == request.auth.uid || isAdmin());
    }

    match /comp_rounds/{compRoundId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.uid == request.auth.uid;
      allow update, delete: if isAuthenticated() && (resource.data.uid == request.auth.uid || isAdmin());
    }

    // =========================================================================
    // üîë ADMIN & SYSTEM
    // =========================================================================
    
    match /preapproved_emails/{email} {
      // App needs to read this during registration
      allow read: if isAuthenticated() || request.auth == null; 
      // Only admins can add or remove pre-approved emails
      allow write: if isAdmin();
    }
  }
}